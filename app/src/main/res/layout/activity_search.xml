<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yapp.picksari.SearchActivity"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Const_Layout"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp">
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="14dp"
                android:layout_gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="17dp"
                android:background="@drawable/et_round_shape"
                android:completionThreshold="1"
                android:cursorVisible="false"
                android:hint="노래 제목이나 가수명을 입력해 주세요"/>
            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_icon"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toRightOf="@+id/et_search"
                app:layout_constraintTop_toTopOf="@+id/et_search"
                app:layout_constraintBottom_toBottomOf="@+id/et_search"
                android:paddingRight="10dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#bc171717"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:paddingBottom="16dp"
                android:paddingLeft="29dp"
                android:paddingRight="29dp"
                android:visibility="invisible" />
            <LinearLayout
                android:id="@+id/resultView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dip"/>
                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="검색결과"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
                    android:textColor="#949494"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>
                <ListView
                    android:id="@+id/lv_lowOct_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:descendantFocusability="blocksDescendants" />
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 음역대보다 높은 노래"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="50dp"
                    android:textSize="14sp"
                    android:textColor="#949494"
                    android:textStyle="bold"/>
                <ListView
                    android:id="@+id/lv_highOct_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_weight="0.5"/>-->
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
