<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yapp.picksari.PitchDetectStart">

    <ImageView
        android:id="@+id/StartImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_white"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="64sp"
        android:textColor="#3e3a39"
        android:gravity="center_horizontal"
        tools:text="Start!"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/gpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPL 3.0"
        android:textColor="#696969"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This application uses TarsosDSP"
        android:textColor="#696969"
        android:layout_above="@id/gpl"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 권한과 사유 LINK"
        android:layout_above="@id/library"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
